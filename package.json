{
  "name": "@neonhub/platform",
  "version": "2.2.0",
  "description": "AI-powered marketing automation platform with comprehensive agent-based architecture - Final Production Release",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=apps/api\" \"npm run dev --workspace=apps/dashboard\"",
    "build": "turbo run build",
    "build:dashboard": "npm run build --workspace=apps/dashboard",
    "build:api": "npm run build --workspace=apps/api",
    "start": "concurrently \"npm run start --workspace=apps/api\" \"npm run start --workspace=apps/dashboard\"",
    "test": "turbo run test",
    "test:ci": "turbo run test:ci",
    "test:e2e": "playwright test",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "db:push": "npm run db:push --workspace=packages/database",
    "db:generate": "npm run db:generate --workspace=packages/database",
    "db:studio": "npm run db:studio --workspace=packages/database",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "test:coverage": "npm run test --workspaces --if-present -- --coverage",
    "validate:api": "node scripts/api-contract-validator.js",
    "test:autonomous": "node scripts/autonomous-testing-agent.js",
    "fine-tune": "node scripts/fine-tuning-master.js"
  },
  "keywords": [
    "ai",
    "marketing",
    "automation",
    "agents",
    "nextjs",
    "trpc",
    "prisma",
    "typescript",
    "neon",
    "platform"
  ],
  "author": "KofiRusu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/KofiRusu/Neon-v0.3.git"
  },
  "bugs": {
    "url": "https://github.com/KofiRusu/Neon-v0.3/issues"
  },
  "homepage": "https://github.com/KofiRusu/Neon-v0.3#readme",
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "chokidar": "^4.0.3",
    "concurrently": "^8.2.2",
    "eslint-config-prettier": "^10.1.5",
    "prettier": "^3.6.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@axe-core/react": "^4.10.2",
    "@sendgrid/mail": "^8.1.5",
    "jest-axe": "^10.0.0",
    "jspdf": "^3.0.1",
    "puppeteer": "^24.10.2",
    "twilio": "^5.7.1"
  }
}
