# NeonHub AI Marketing Ecosystem - Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="postgresql://neonhub:neonhub_password@localhost:5432/neonhub_dev"

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL="redis://localhost:6379"

# =============================================================================
# AI & OPENAI CONFIGURATION
# =============================================================================
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_ORGANIZATION="your-openai-org-id" # Optional

# =============================================================================
# AUTHENTICATION & SESSION
# =============================================================================
NEXTAUTH_SECRET="your-nextauth-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# =============================================================================
# API CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_URL="http://localhost:3001"
API_PORT=3001

# =============================================================================
# EXTERNAL SERVICE INTEGRATIONS
# =============================================================================

# Social Media APIs
FACEBOOK_APP_ID="your-facebook-app-id"
FACEBOOK_APP_SECRET="your-facebook-app-secret"
INSTAGRAM_ACCESS_TOKEN="your-instagram-access-token"
TIKTOK_CLIENT_KEY="your-tiktok-client-key"
TIKTOK_CLIENT_SECRET="your-tiktok-client-secret"
LINKEDIN_CLIENT_ID="your-linkedin-client-id"
LINKEDIN_CLIENT_SECRET="your-linkedin-client-secret"

# Email Services
SENDGRID_API_KEY="your-sendgrid-api-key"
MAILGUN_API_KEY="your-mailgun-api-key"
MAILGUN_DOMAIN="your-mailgun-domain"

# Payment Processing
STRIPE_SECRET_KEY="your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret"

# E-commerce Platforms
SHOPIFY_API_KEY="your-shopify-api-key"
SHOPIFY_API_SECRET="your-shopify-api-secret"
SHOPIFY_STORE_URL="your-shopify-store-url"

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Sentry (Error Tracking)
SENTRY_DSN="your-sentry-dsn"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="neonhub-ai-ecosystem"

# Google Analytics
GOOGLE_ANALYTICS_ID="your-ga4-id"

# Mixpanel (Optional)
MIXPANEL_TOKEN="your-mixpanel-token"

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
NODE_ENV="development"
DEBUG="neonhub:*"
LOG_LEVEL="debug"

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# Uncomment and configure for production deployment

# Vercel (Frontend)
# VERCEL_URL="https://your-domain.vercel.app"

# Railway/Render (Backend)
# RAILWAY_TOKEN="your-railway-token"
# RENDER_API_KEY="your-render-api-key"

# PlanetScale (Database)
# PLANETSCALE_DATABASE_URL="your-planetscale-url"

# Upstash (Redis)
# UPSTASH_REDIS_REST_URL="your-upstash-redis-url"
# UPSTASH_REDIS_REST_TOKEN="your-upstash-redis-token"

# =============================================================================
# SECURITY & COMPLIANCE
# =============================================================================

# Encryption
ENCRYPTION_KEY="your-32-character-encryption-key"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000" # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"

# CORS
CORS_ORIGIN="http://localhost:3000,https://your-domain.com"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_AI_AGENTS="true"
ENABLE_AUTOMATION="true"
ENABLE_ANALYTICS="true"
ENABLE_NOTIFICATIONS="true"

# =============================================================================
# CUSTOMIZATION
# =============================================================================
BRAND_NAME="NeonHub"
BRAND_COLOR="#00ff88"
DEFAULT_LOCALE="en-US"
SUPPORTED_LOCALES="en-US,es-ES,fr-FR,de-DE"

# =============================================================================
# INTEGRATION WEBHOOKS
# =============================================================================
WEBHOOK_SECRET="your-webhook-secret"
SLACK_WEBHOOK_URL="your-slack-webhook-url"
DISCORD_WEBHOOK_URL="your-discord-webhook-url" 